@import 'nib'
@import 'normalize'

vendor-prefixes = moz ms o webkit official
support-for-ie = true

html
	background-color #fff

body
	margin 0 auto
	padding 1em 2em 1em 340px
	position relative
	width 20em

	background-color #ccc

	font normal 100%/1.5 "PT Serif",Georgia,serif

h1
	margin 0.3em 0 0.8em

	text-align center

form
	padding 0 0 1em

form div
	margin-bottom 1em

label
	display block

input
	padding 0.5em
	width 100%

	border 1px solid #999
	border-radius 4px
	box-sizing border-box

fieldset
	margin 0
	padding 0
	border 0

legend
	padding 1em 0 0
	width 100%

	border-top 1px dotted #666

.why
	font-size 0.875em

.button-group
	padding-top 1em

	text-align center

button
	padding 0.9em 1.2em
	position relative

	background #4162a8
	border 1px solid #444
	border-radius 4px
	box-shadow inset 0 1px 10px 1px #5c8bee, 0px 1px 0 #1d2c4d, 0 6px 0px #1f3053, 0 8px 4px 1px #111111

	text-shadow 0px -1px 1px #1e2d4d

	color #fff
	font bold 1.275em/1 "PT Serif",Georgia,serif

button:hover
	box-shadow inset 0 0px 20px 1px #87adff, 0px 1px 0 #1d2c4d, 0 6px 0px #1f3053, 0 8px 4px 1px #111111

button:active
	top 5px

	box-shadow inset 0 1px 10px 1px #5c8bee, 0 1px 0 #1d2c4d, 0 2px 0 #1f3053, 0 4px 3px 0 #111111

footer
	left 0
	margin-top -3.7em
	position absolute
	width 340px

	font-size 0.875em
	text-align center
