@import 'nib'
@import 'normalize'

vendor-prefixes = moz ms o webkit official
support-for-ie = true

html
	background-color #725f3b

body
	margin 0 auto
	padding 1em 5em 1em 390px
	position relative
	width 24em

	background-color #877046
	background: linear-gradient(right, #725f3b 0%, #877046 15%, #877046 85%, #725f3b 100%);

	color #eee8dd
	font normal 100%/1.5 "PT Serif",Georgia,serif

h1
	margin 0.5em auto 0.6em
	height 57px
	overflow hidden
	width 360px

	background transparent url("pupperazzi.png") no-repeat left top

	font normal 3em/1 sans-serif
	text-align center
	text-indent 100%
	white-space nowrap

a
a:link
a:visited
	color #bfaa82

.link-em
.link-em:link
.link-em:visited
	color #eee8dd

.cover
	left 60px
	position absolute
	top 40px

.cover-img
	display block

	box-shadow 0 35px 40px -40px rgba(0,0,0,0.6)

.cover-caption
	display block
	padding 0.5em 0

	font-size 0.875em
	font-style italic
	text-align center

form
	padding 0 0 1em

form div
	margin-bottom 1em

label
	display block

input
	padding 0.5em
	width 100%

	background-color #eee8dd
	border 1px solid #725f3b
	border-radius 4px
	box-sizing border-box

input:focus
	background-color #fff

fieldset
	margin 0
	padding 0
	border 0

legend
	padding 1em 0 0
	width 100%

.why
	font-size 0.875em

.button-group
	padding-top 1em

	text-align center

button
	padding 0.9em 1.2em
	position relative

	background-color #bed854
	border 1px solid #66791b
	border-radius 4px
	box-shadow inset 0 1px 10px 1px #d9e89b, 0 6px 0px #66791b, 0 8px 4px 1px rgba(#2a3c30,0.6)

	color #2a3c30
	font bold 1.275em/1 "PT Serif",Georgia,serif

button:hover
	box-shadow inset 0 0px 20px 1px #e6f0bc, 0 6px 0px #66791b, 0 8px 4px 1px rgba(#2a3c30,0.6)

button:active
	top 5px

	box-shadow inset 0 1px 10px 1px #d9e89b, 0 2px 0 #66791b, 0 4px 3px 0 rgba(#2a3c30,0.6)

[role="contentinfo"]
	color #bfaa82
	font-style normal
